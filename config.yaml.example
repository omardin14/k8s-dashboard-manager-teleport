# Kubernetes Dashboard Manager with Teleport Configuration

# Teleport Configuration
teleport:
  # Teleport Proxy endpoint
  # For Kubernetes-deployed Teleport: leave as default or use "teleport-cluster.teleport-cluster.svc.cluster.local:443"
  # The Makefile will auto-convert localhost to the Kubernetes service address
  # For Teleport Cloud/Enterprise: use your proxy endpoint (e.g., example.teleport.com:443)
  proxy_addr: "teleport-cluster.teleport-cluster.svc.cluster.local:443"
  
  # Kubernetes cluster name in Teleport
  cluster_name: "minikube"
  
  # Teleport join token (auto-generated by 'make generate-token' or set manually)
  # Leave as placeholder - will be auto-generated if Teleport is deployed
  # Or generate manually via Teleport Web UI: Settings → Authentication → Tokens
  join_token: "YOUR_TELEPORT_JOIN_TOKEN_HERE"
  
  # Teleport agent namespace (should match Teleport server namespace for local testing)
  namespace: "teleport-cluster"

# Kubernetes Configuration
kubernetes:
  # Dashboard namespace
  namespace: "kubernetes-dashboard"

